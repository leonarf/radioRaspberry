#########! lircrcd
# This is an example config file for your LIRC remote.  All buttons
# depend on what you have configured in your lircd.conf file.  Please
# refer to this and adjust the labels below accordingly.

# This section includes two configs, what this does is that it allows
# you to open tvtime and close tvtime with one button.  If your remote
# has seperate buttons for this, then you can break it apart.
begin
    prog = IRmanager
    button = KEY_VOLUMEUP
    config = {"VOLUME" : 5}
end

begin
    prog = IRmanager
    button = KEY_VOLUMEDOWN
    config = {"VOLUME" : -5}
end

begin
    prog = IRmanager
    button = BTN_0
    config = {"SETRADIO" : 0}
end

begin
    prog = IRmanager
    button = BTN_1
    config = {"SETRADIO" : 1}
end

begin
    prog = IRmanager
    button = BTN_2
    config = {"SETRADIO" : 2}
end

begin
    prog = IRmanager
    button = BTN_3
    config = {"SETRADIO" : 3}
end

begin
    prog = IRmanager
    button = BTN_4
    config = {"SETRADIO" : 4}
end

begin
    prog = IRmanager
    button = BTN_5
    config = {"SETRADIO" : 5}
end

begin
    prog = IRmanager
    button = BTN_6
    config = {"SETRADIO" : 6}
end

begin
    prog = IRmanager
    button = BTN_7
    config = {"SETRADIO" : 7}
end

begin
    prog = IRmanager
    button = BTN_8
    config = {"SETRADIO" : 8}
end

begin
    prog = IRmanager
    button = BTN_9
    config = {"SETRADIO" : 9}
end

begin
    prog = IRmanager
    button = KEY_CHANNELDOWN
    config = {"CHANGERADIO" : -1}
end

begin
    prog = IRmanager
    button = KEY_PREVIOUS
    config = {"CHANGERADIO" : -1}
end

begin
    prog = IRmanager
    button = KEY_CHANNELUP
    config = {"CHANGERADIO" : 1}
end

begin
    prog = IRmanager
    button = KEY_NEXT
    config = {"CHANGERADIO" : 1}
end

begin
    prog = IRmanager
    button = KEY_PLAY
    config = {"CHANGESTATE" : "play"}
end

begin
    prog = IRmanager
    button = KEY_PAUSE
    config = {"CHANGESTATE" : "pause"}
end

begin
    prog = IRmanager
    button = KEY_STOP
    config = {"CHANGESTATE" : "stop"}
end

begin
    prog = IRmanager
    remote = remoteRadio
    button = KEY_POWER
    repeat = 10
    delay = 10
    config = HALT
end

begin
    prog = IRmanager
    button = KEY_STANDBY
    config = {"CHANGESTATE" : "dodge_ad"}
end
